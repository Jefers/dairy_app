<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="icon" href="/images/favicon.png" type="image/x-icon" />
    <link rel="icon" href="/images/favicon.gif" type="image/x-icon" />
    <%= javascript_include_tag :defaults, 'jquery-ui-1.8.9.custom.min', 'autocomplete-rails', 'jquery.cookie', 'jquery.validate' %>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
  </head>
  <body>
    <div class="wrapper container">               <!-- START: container -->
      <div class="span-24 header">                <!-- START: header -->
      <%= render 'layouts/header' %>
      </div>                                      <!-- END: header -->
      <div class="span-4">                        <!-- START: left_bar -->
        <%= render 'layouts/left_bar' %>
      </div>                                      <!-- END: left_bar -->
      <div class="span-13">                       <!-- START: main -->
        <section>
          <%= yield %>
        </section>
      </div>                                      <!-- END: main -->
      <div class="span-7 last">                   <!-- START: right_bar -->
        <%= render 'layouts/right_bar' %>
      </div>                                      <!-- END: right_bar -->
      <div class="push"></div>
    </div>                                        <!-- END: container -->
    <div class="span-24 footer">                  <!-- START: footer -->
      <%= render 'layouts/noscript' %>
      <%= render 'layouts/footer' %>
    </div>                                        <!-- END: footer -->

  </body>
</html>