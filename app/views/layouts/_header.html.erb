<header>
  <%= link_to logo, root_path %>
 <h1>beta site</h1>
  <nav id="login_nav">
    <% if current_customer.try(:admin?) %>
      <%= link_to "Categories", categories_path %> |
    <% end %>
    <% if customer_signed_in? %>
      <%= link_to "My Orders", myorders_path %> | Signed in as <%= current_customer.email %>. Not you?
      <%= link_to "Sign out", destroy_customer_session_path %>
    <% else %>
      <%= link_to "Sign up", new_customer_registration_path %> or <%= link_to "sign in", new_customer_session_path %>
    <% end %>
  </nav>
  <nav id="help_nav">
    <ul>
    <% if customer_signed_in? %>
      <li><%= link_to "My Orders", myorders_path %></li>
    <% end %>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Help", help_path %></li>
    </ul>
  </nav>
  <section id="flash">
      <% if current_customer.try(:admin?) %> 
        <nav id="tabnav">
          <ul>
            <li><%= link_to "Products", products_path %></li>
            <li><%= link_to "Categories", categories_path %></li>
            <li><%= link_to "Orders", myorders_path %></li>
          </ul>
        </nav>  
      <% end %>
  <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
  <% end %>
  </section>

</header>

