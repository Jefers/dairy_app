<nav id="left_bar">
<% unless @categories.blank? %>
  <div class="item_views">
    View:
    <span class="view"><%= link_to_unless params[:view].blank?, image_tag("full.png", :size => "15x10"), params.merge(:view => nil, :page => nil), :title => "Full View" %></span>
    <span class="view"><%= link_to_unless params[:view] == "list", image_tag("list.png", :size => "14x10"), params.merge(:view => "list", :page => nil), :title => "List View" %></span>
    <span class="view"><%= link_to_unless params[:view] == "grid", image_tag("grid.png", :size => "11x10"), params.merge(:view => "grid", :page => nil), :title => "Grid View" %></span>
  </div>
<hr />
  <%= render 'categories/list', :categories => @categories %>
<% else %>
  <%= render 'pages/advert' %>
<% end %>
</nav>