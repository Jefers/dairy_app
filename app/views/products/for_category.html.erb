<fieldset id="userPreferences">
  <legend>Display Preferences</legend>
<%= form_tag products_path, :method => 'get' do %>
  <%= label_tag 'Items per page:' %>
  <%= text_field_tag 'per_page', cookies[:perPage], :size => '1' %>
  <%= submit_tag "save", :id => "save_button" %>
<% end %>
<button>Toggle Pictures</button>
</fieldset>
<%= form_tag products_path, :method => 'get' do %>
  <p>
    Search for a product:
    <%= autocomplete_field_tag :search, params[:search], products_autocomplete_product_name_path %>
    <%= submit_tag "GO", :class => "go_button", :id => "go_button" %>
  </p>
  <div id="products"><%= render 'products' %></div>
<% end %>
