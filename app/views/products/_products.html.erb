<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<%= hidden_field_tag :category, params[:category] %>

  <table class="pretty" id="products">
    <tr>
      <th class="productImage"></th>
      <th><%= sortable "name" %></th>
      <% if customer_signed_in? %>
      <th><%= sortable "price" %></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <% end %>
    </tr>
    <% for product in @products %>
        <td class="productImage"><%= link_to (image_tag product.picture.url(:tiny)), product  %> </td>
        <td><%= link_to product.name, product %></td>
        <% if customer_signed_in? %>
         <td class="price"><%= quid(product.price) %></td>
         <td>
         <%= form_tag({:action=>'add_to_cart', :id=>product.id}, :remote=>true) do %>
           <%= button_to "Add to Cart" %>
         <% end %>
         </td>
         <td><%= link_to 'Show', product %></td>
         <td><%= link_to 'Edit', edit_product_path(product) %></td>
         <td><%= link_to "Destroy", product, :method=>:delete, :confirm=>"Are you sure you want to delete this?", :remote=>:true, :class=>"balert" %></td>
        <% end %>
      </tr>
    <% end %>
  </table>

<div class="digg_pagination"> 
  <%# will_paginate @products %>
  <%= paginate @products %>
</div> 