<div class="cart-title">Your Cart</div>

<table>
  <%= render(:partial => "cart_item", :collection => @cart.items) %>
  <tr class="total-line">
    <td>Total</td>
    <td>&nbsp;</td>
    <td class="total-cell"><%= quid(@cart.total_price) %></td>
  </tr>
</table>

<%= button_to "Empty cart", :action => :empty_cart %