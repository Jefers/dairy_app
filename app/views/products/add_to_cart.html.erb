<div class="cart-title">Your Basket</div>

<table>
  <%= render(:partial => "cart_item", :collection => @cart.items) %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= quid(@cart.total_price) %></td>
  </tr>
</table>

<%= button_to "Empty cart", :action => :empty_cart %>