<h1>Editing order</h1>
<% semantic_form_for(@order) do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :email %>
    <%= f.input :pay_type, :as => :select, :collection => ["Cheque", "BACS"] %>
    <%= f.input :status, :as => :select, :collection => ["pr","dr","pu","ok"] %>
    <%= f.submit "Update" %>
  <% end %>
<% end %>

